<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body>
    <% if (user) { %>
        <% if (user.role === 'admin') { %>
            <%- include('partials/navbar-admin', { currentPage: currentPage || '' }) %>
        <% } else { %>
            <%- include('partials/navbar-user', { currentPage: currentPage || '' }) %>
        <% } %>
    <% } %>

    <%- include('partials/flash-messages') %>

    <!-- Main Content -->
    <div class="container">
        <%- body %>
    </div>

    <%- include('partials/scripts', { extraScripts: typeof scripts !== 'undefined' ? scripts : '' }) %>
</body>
</html> 